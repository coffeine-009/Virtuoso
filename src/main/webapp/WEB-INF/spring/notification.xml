<beans
    xmlns       = "http://www.springframework.org/schema/beans"
    xmlns:xsi   = "http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation = "http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"
>
    <!-- Loader for templates -->
    <bean
        id = "templateLoader"
        class = "com.github.jknack.handlebars.io.ClassPathTemplateLoader"
    >
        <property name = "prefix" value = "/notifications/templates"/>
        <property name = "suffix" value = ".hbs"/>
    </bean>

    <!-- Manager of templates -->
    <bean
        id = "templateManager"
        class = "com.github.jknack.handlebars.Handlebars"
    >
        <constructor-arg name = "loader" ref = "templateLoader"/>
    </bean>

</beans>