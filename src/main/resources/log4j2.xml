<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Properties>
        <Property name="filename">/tmp/virtuoso-actions.log</Property>
        <Property name="file-pattern">/tmp/virtuoso-actions-%d{MM-dd-yyyy}.log.gz</Property>
    </Properties>

    <Appenders>
        <File name="FILE" fileName="${filename}" append="true">
            <MarkerFilter marker="ACTION" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout
                pattern="%highlight{%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - : %msg%n%throwable}{STYLE=Logback}"
            />
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%highlight{%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - : %msg%n%throwable}{STYLE=Logback}"
            />
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="com.coffeine.virtuoso" level="debug"/>

        <Root level="info">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>

</Configuration>
